<form action="/adduser" method="post" class="signupForm">
   <!----------------------- Main Container -------------------------->
   <div class="container d-flex justify-content-center align-items-center min-vh-100">
      <!----------------------- Login Container -------------------------->
      <div class="row border rounded-5 p-3 bg-white shadow box-area">
         <!--------------------------- Left Box ----------------------------->
         <div class="col-md-6 rounded-4 d-flex justify-content-center align-items-center flex-column left-box" style="background: #103cbe;">
            <div class="featured-image mb-3">
               <img src="images/1.png" class="img-fluid" style="width: 250px;">
            </div>
            <p class="text-white fs-2" style="font-family: 'Courier New', Courier, monospace; font-weight: 600;">Be Notified</p>
            <small class="text-white text-wrap text-center" style="width: 17rem;font-family: 'Courier New', Courier, monospace;">Enjoy Weekly news on this platform.</small>
         </div>
         <!-------------------- ------ Right Box ---------------------------->
         <div class="col-md-6 right-box">
            <div class="row align-items-center">
               <div class="header-text mb-4">
                  <h2>ADD USER</h2>
                  <p>Here you add users</p>
               </div>
               <div class="input-group mb-3" >
                  <input type="text" placeholder="Username" id="ur" name="ur" class="form-control form-control-lg bg-light fs-6" required>
               </div>
               <div class="input-group mb-1">
                  <input type="email"  placeholder="Email" class="form-control form-control-lg bg-light fs-6" id="email" name="email" required>
               </div>
               <div class="padding_left margin_bottom_10">
                  <div class="form-check">
                     <input class="form-check-input" type="radio" name="interest" id="Sports" value="Sports">
                     <label for="Sports">Sports</label>
                     Sports
                     </label>
                  </div>
                  <div class="form-check">
                     <input class="form-check-input" type="radio" name="interest" id="Technology" value="Technology" >
                     <label class="form-check-label" for="Technology">
                     Technolody
                     </label>
                  </div>
                  <div class="form-check">
                     <input class="form-check-input" type="radio" name="interest" id="Cinema" value="Cinema" >
                     <label for="Cinema">Cinema</label>
                  </div>
                  <div class="form-check">
                     <input class="form-check-input" type="radio" name="interest" id="Politics" value="Politics" >
                     <label for="Politics">Politics</label>
                  </div>
               </div>
               <div class="input-group mb-3">
                  <button class="btn btn-lg btn-primary w-100 fs-6" type="submit" id="submit">Add User</button>
               </div>
            </div>
         </div>
      </div>
   </div>
</form>